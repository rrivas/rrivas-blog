= simple_form_for @user, html: { class: 'form-horizontal' } do |f|
  = f.input :first_name
  = f.input :last_name
  = f.input :email
  = f.input :password, required: true
  = f.input :password_confirmation, required: true
  = f.input :active, input_html: { checked: 'checked' }
  = f.submit 'Sign Up'
  